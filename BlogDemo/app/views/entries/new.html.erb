<%= provide(:title,"New Entry")  %>
<h1>New Entry</h1>
<div class="row">
	<div class="col-lg-offset-2 col-lg-8">
		<%= form_for(@entry) do |f|  %>
			<%= render "shared/error_messages", object: f.object  %>

			<%= f.label :title  %>
			<%= f.text_field :title, class: "form-control" %>

			<%= f.label :body  %>
			<%= f.text_area :body, placeholder: "Compose new entry...", style: "display: block; width:100%; height:100px; margin-bottom:20px", class: "form-control"  %>

			<%= f.submit "Post", class: "btn btn-primary"  %>
		<% end  %>
	</div>
</div>