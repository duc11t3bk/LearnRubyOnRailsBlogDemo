<% provide(:title,"Home")  %>
<h1>Welcome to Blog App</h1>
<% if logged_in? %>
<div class="row">
	<aside class="col-md-4">
		<section>
			<%= render "shared/user_info"  %>	
		</section>
		<section class="stats">
			<%= render "shared/stats" %>
		</section>
		<section>
			<%= link_to "New Entry", new_entry_path  %>
		</section>
	</aside>
	<div class="col-lg-8">
		<h3>Entry Feed</h3>
		<%= render "shared/feed"  %>
	</div>
</div>
<% else %>
	
<% end %>
