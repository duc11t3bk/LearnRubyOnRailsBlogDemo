<%= provide(:title, @title)  %>
<div class="row">
	<div class="col-lg-4">
		<section>
			<%= render "shared/user_info"  %>
		</section>
		<section>
			<%= render "shared/stats" %>
		</section>
	</div>
	<div class="col-lg-8">
		<h3><%= @title  %></h3>
		<% if @users.any? %>
			<ul class="users-follow">
				<%= render @users  %>
			</ul>
			<%= will_paginate  %>
		<% end %>
	</div>
</div>